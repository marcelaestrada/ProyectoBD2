@using RedCruises.Models
@model IEnumerable<RedCruises.Models.ViajesLargos>

@{
    ViewBag.Title = "Viajes largos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h2 {
        color: #333333;
        font-family: 'Bitter', serif;
        font-size: 50px;
        font-weight: normal;
        line-height: 54px;
        margin: 0 0 54px;
    }

    .container {
        margin-top: 40px;
    }

    .btn-primary {
        width: 100%;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <br />
            <br />
            <h2>Viajes con tres o más rutas</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IDViaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Origen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destino)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Llegada)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDViaje)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destino)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Llegada)
                    </td>
                </tr>
            }

        </table>

    }
</body>
</html>